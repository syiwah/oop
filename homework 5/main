import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.GridPane;
import javafx.stage.Stage;
import javafx.geometry.Insets;

public class MainApplication extends Application {

    @Override
    public void start(Stage stage) {
        // Create buttons for each window
        Button btnAlya = new Button("Open Alya Window");
        Button btnHadhina = new Button("Open Hadhina Window");
        Button btnInsyi = new Button("Open Insyi Window");
        Button btnTeha = new Button("Open Teha Window");

        // Set event handlers for buttons
        btnAlya.setOnAction(this::openAlyaWindow);
        btnHadhina.setOnAction(this::openHadhinaWindow);
        btnInsyi.setOnAction(this::openInsyiWindow);
        btnTeha.setOnAction(this::openTehaWindow);

        // Create a grid pane for the main window
        GridPane pane = new GridPane();
        pane.setPadding(new Insets(10, 10, 10, 10));
        pane.setMinSize(300, 200);
        pane.setVgap(10);
        pane.setHgap(10);

        // Add buttons to the pane
        pane.add(btnAlya, 0, 0);
        pane.add(btnHadhina, 1, 0);
        pane.add(btnInsyi, 0, 1);
        pane.add(btnTeha, 1, 1);

        // Set up the scene and stage
        Scene scene = new Scene(pane, 300, 200);
        stage.setTitle("Main Application");
        stage.setScene(scene);
        stage.show();
    }

    private void openAlyaWindow(ActionEvent event) {
        FrontEndAlya alya = new FrontEndAlya();
        Stage stage = new Stage();
        alya.start(stage);
    }

    private void openHadhinaWindow(ActionEvent event) {
        FrontEndHadhina hadhina = new FrontEndHadhina();
        Stage stage = new Stage();
        hadhina.start(stage);
    }

    private void openInsyiWindow(ActionEvent event) {
        FrontEndInsyi insyi = new FrontEndInsyi();
        Stage stage = new Stage();
        insyi.start(stage);
    }

    private void openTehaWindow(ActionEvent event) {
        FrontEndTeha teha = new FrontEndTeha();
        Stage stage = new Stage();
        teha.start(stage);
    }

    public static void main(String[] args) {
        launch(args);
    }
}
